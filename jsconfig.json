{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "paths": {
    "@": ["./resources/js"]
  },
  "include": ["resources/js/**/*.js", "resources/js/**/*.d.ts", "resources/js/**/*.jsx", "src/**/*.vue"],
  "references": [{ "path": "./jsconfig.node.json" }]
}