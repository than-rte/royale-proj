<div class="columns">
<!-- search -->
<div class="column is-7">
  <BCard>
    <BCardHeader class="has-background-link-light">
      <h5 class="card-header-title">
        <BIcon pack="bi" icon="search" class="mr-2" />
        Search
      </h5>
    </BCardHeader>
    <BCardContent>
      <BField>
        <BInput
          pack="bi"
          icon="search"
          :icon-right="searchInput.length > 0 ? 'x-circle-fill' : ''"
          :icon-right-clickable="searchInput.length > 0"
          @icon-right-click="clearSearch"
          v-model="searchInput"
          expanded
          placeholder="Search a venue..."
        />
        <div class="control">
          <BButton
            type="is-primary"
            outlined
            label="Search"
            icon-left="search"
            @click="venueSearch()"
          />
        </div>
      </BField>
    </BCardContent>
  </BCard>
</div>
<!-- filters -->
<div class="column is-5">
  <BCard>
    <BCardHeader class="has-background-link-light">
      <h5 class="card-header-title">
        <BIcon pack="bi" icon="filter" class="mr-2" />
        Sort By
      </h5>
    </BCardHeader>
    <BCardContent>
      <BField grouped group-multiline>
        <BSelect v-model="sort" type="is-primary">
          <option
            v-for="(option, i) in sortOptions"
            v-bind:value="option.value"
            :key="i"
          >
            {{ option.text }}
          </option>
        </BSelect>
        <BSelect v-model="status" type="is-primary">
          <option
            v-for="(option, i) in statusOptions"
            v-bind:value="option.value"
            :key="i"
          >
            {{ option.text }}
          </option>
        </BSelect>
      </BField>
    </BCardContent>
  </BCard>
</div>
</div>